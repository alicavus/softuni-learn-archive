{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-no-pie",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active directory",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-no-pie",
                "-g",
                "'${fileDirname}/'*.cpp",
                "-o",
                "${fileDirname}/run"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "7z archive active file",
            "command": "/usr/bin/7z",
            "args": [
                "a",
                "${fileWorkspaceFolderBasename}.zip",
                "${file}"
            ],
            "group": {
                "kind": "none"
            },
            "detail": "7z create/update archive"
        },
        {
            "type": "shell",
            "label": "py archive active file",
            "command": "/usr/bin/python",
            "args": [
                "${workspaceFolder}/.vscode/archive.py",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "none"
            },
            "detail": "py create/update archive"
        },
        {
            "type": "shell",
            "label": "Valgrind: Check for memory issues (dirbuild)",
            "command": "/usr/bin/valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "-s",
                "${fileDirname}/run"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "none"
            },
            "detail": "Check for memory issues"
        },
        {
            "type": "shell",
            "label": "Valgrind: Check for memory issues (file)",
            "command": "/usr/bin/valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "-s",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "none"
            },
            "detail": "Check for memory issues"
        }
    ],
    "version": "2.0.0"
}